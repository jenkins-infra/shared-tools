def dockerImage = 'jenkinsciinfra/hashicorp-tools:0.5.54' // Tracked by updatecli

pipeline {
  agent none
  options {
    timeout(time: 10, unit: 'MINUTES')
    buildDiscarder(logRotator(numToKeepStr: '10'))
  }
  stages {
    stage('Updatecli DIFF') {
      steps {
        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
          updatecli(action: 'diff', updatecliDockerImage: dockerImage)
        }
      }
    }
    stage('Updatecli APPLY') {
      when { branch 'main' }
      steps {
        updatecli(action: 'apply', cronTriggerExpression: '@daily', updatecliDockerImage: dockerImage)
      }
    }
  }
}
